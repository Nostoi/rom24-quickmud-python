{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Player",
  "type": "object",
  "required": [
    "name",
    "level",
    "race",
    "ch_class",
    "sex",
    "trust",
    "security",
    "hit",
    "max_hit",
    "mana",
    "max_mana",
    "move",
    "max_move",
    "perm_hit",
    "perm_mana",
    "perm_move",
    "gold",
    "silver",
    "exp",
    "practice",
    "train",
    "saving_throw",
    "alignment",
    "hitroll",
    "damroll",
    "wimpy",
    "points",
    "true_sex",
    "last_level",
    "position",
    "conditions",
    "armor",
    "perm_stat",
    "mod_stat",
    "room_vnum",
    "inventory",
    "equipment",
    "plr_flags",
    "affected_by",
    "comm_flags",
    "wiznet"
  ],
  "properties": {
    "name": {"type": "string"},
    "level": {"type": "integer"},
    "race": {"type": "integer"},
    "ch_class": {"type": "integer"},
    "sex": {"type": "integer"},
    "trust": {"type": "integer"},
    "security": {"type": "integer"},
    "hit": {"type": "integer"},
    "max_hit": {"type": "integer"},
    "mana": {"type": "integer"},
    "max_mana": {"type": "integer"},
    "move": {"type": "integer"},
    "max_move": {"type": "integer"},
    "perm_hit": {"type": "integer"},
    "perm_mana": {"type": "integer"},
    "perm_move": {"type": "integer"},
    "gold": {"type": "integer"},
    "silver": {"type": "integer"},
    "exp": {"type": "integer"},
    "practice": {"type": "integer"},
    "train": {"type": "integer"},
    "saving_throw": {"type": "integer"},
    "alignment": {"type": "integer"},
    "hitroll": {"type": "integer"},
    "damroll": {"type": "integer"},
    "wimpy": {"type": "integer"},
    "points": {"type": "integer"},
    "true_sex": {"type": "integer"},
    "last_level": {"type": "integer"},
    "position": {"type": "integer"},
    "conditions": {
      "type": "array",
      "items": {"type": "integer"},
      "minItems": 4,
      "maxItems": 4,
      "default": [0, 48, 48, 48]
    },
    "armor": {
      "type": "array",
      "items": {"type": "integer"},
      "minItems": 4,
      "maxItems": 4,
      "default": [0, 0, 0, 0]
    },
    "perm_stat": {
      "type": "array",
      "items": {"type": "integer"},
      "minItems": 5,
      "maxItems": 5,
      "default": [0, 0, 0, 0, 0]
    },
    "mod_stat": {
      "type": "array",
      "items": {"type": "integer"},
      "minItems": 5,
      "maxItems": 5,
      "default": [0, 0, 0, 0, 0]
    },
    "room_vnum": {"type": ["integer", "null"]},
    "inventory": {
      "type": "array",
      "items": {"type": "integer"},
      "default": []
    },
    "equipment": {
      "type": "object",
      "additionalProperties": {"type": "integer"},
      "default": {}
    },
    "plr_flags": {"type": "integer"},
    "affected_by": {"type": "integer"},
    "comm_flags": {"type": "integer"},
    "wiznet": {"type": "integer"}
  }
}
